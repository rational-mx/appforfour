%p#notice= notice

%p
  %b Body:
  = @post.body
- if @post.medium 
  / Check application config for sanitize tags permited
  = sanitize @post.medium.link_url
%p
  %b User:
  = @post.user.username
  %b Browser:
  = @post.device_inf.browser
  %b Os:
  = @post.device_inf.os
  %div#likes
    - if @already_liked
      = link_to "Don't like anymore", like_path(@like), method: :delete, remote: true
    - else 
      = render 'likes/form'
    %b likes:
    = @post.likes.count

#comments
  %b Comments:
  %br
  - @post.comments.all.order('id asc').limit(@number_of_comments).each do |comment|
    = comment.user.username
    =":"
    = sanitize comment.body
    %b Browser:
    = comment.device_inf.browser
    %b Os:
    = comment.device_inf.os
    %br
    %div{id: "cmtpst" + comment.id.to_s}
      - comment_like = comment.likes.where(user_id: current_user.id)
      - if comment_like.blank?
        - @like = comment.likes.new
        - @like.user = current_user
        = render 'likes/form'
      - else
        - @like = comment_like.first
        = link_to "Don't like anymore", like_path(@like), method: :delete, remote: true
      %b likes:
      = comment.likes.count
  = link_to 'Most comments', scroll_post_path(@post,number_of_comments: (@number_of_comments)), method: :get,remote: true, id: :more_comments
  

= render 'comments/form'


= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path

