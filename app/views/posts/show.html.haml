%p#notice= notice

%p
  %b Body:
  = @post.body
%p
  %b User:
  = @post.user.username
  = render 'likes/form'
%div#likes
  %b likes:
  = @post.likes.count

%p#comments
  %b Comments:
  - @post.comments.each do |comment|
    = comment.user.username
    =":"
    = comment.body
    %br

= render 'comments/form'

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
